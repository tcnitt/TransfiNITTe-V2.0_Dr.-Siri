  }

  .txt2 {
    font-family: 'Yanone Kaffeesatz', sans-serif;
    font-size: 1.15em;
    line-height: 1.4;
    color: #4272d7;
   }

  .card-signin {
    border: 0;
    border-radius: 1rem;
    box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.2);
  }

  .card-signin .card-title {
    margin-bottom: 2rem;
